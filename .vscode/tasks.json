{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "g++ -c common/*.c *.cpp shaders/*.cpp meshloader/*.cpp scenes/*.cpp shapes/*.cpp",
            "group": "build"
        },
        {
            "label": "link",
            "type": "shell",
            "command": "g++ -o Make/viewer.exe *.o -lglfw3 -lopengl32 -lgdi32",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn":["compile"]
        }
    ]
}